{
  "name": "coder-workspaces",
  "publisher": "coder",
  "displayName": "Coder Workspaces",
  "description": "Connect VS Code to your Coder Workspaces",
  "repository": "https://github.com/cdr/vscode-coder",
  "preview": true,
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.54.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdr/vscode-coder/issues"
  },
  "icon": "media/logo.png",
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onView:coderWorkspaces"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coder",
          "title": "Coder",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "coder": [
        {
          "id": "coderWorkspaces",
          "name": "Coder Workspaces",
          "visibility": "visible",
          "icon": "media/logo.svg",
          "contextualTitle": "Workspaces"
        },
        {
          "id": "coderHelpFeedback",
          "name": "Help and Feedback"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "coderWorkspaces.rebuildWorkspace",
          "group": "inline",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.rebuildWorkspace",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.showWorkspaceLogs",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.showWorkspaceYaml",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.shutdownWorkspace",
          "group": "inline",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.shutdownWorkspace",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.openWorkspace",
          "group": "inline",
          "when": "view == coderWorkspaces"
        },
        {
          "command": "coderWorkspaces.openWorkspace",
          "when": "view == coderWorkspaces"
        }
      ],
      "view/title": [
        {
          "command": "coderWorkspaces.refreshWorkspaces",
          "when": "view == coderWorkspaces",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "coderWorkspaces.refreshWorkspaces",
        "title": "Refresh Workspaces",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "coderWorkspaces.rebuildWorkspace",
        "title": "Rebuild",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "coderWorkspaces.showWorkspaceLogs",
        "title": "Show Logs"
      },
      {
        "command": "coderWorkspaces.showWorkspaceYaml",
        "title": "Inspect"
      },
      {
        "command": "coderWorkspaces.shutdownWorkspace",
        "title": "Shutdown",
        "icon": {
          "light": "media/light/stop.svg",
          "dark": "media//dark/stop.svg"
        }
      },
      {
        "command": "coderWorkspaces.openWorkspace",
        "title": "Open",
        "icon": {
          "light": "media/light/launch.svg",
          "dark": "media/dark/launch.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint . --ext ts,md",
    "tsc:compile": "tsc",
    "tsc:watch": "tsc -w",
    "pretest:ci": "npm run tsc:compile",
    "test:ci": "node ./out/test/runTest.js",
    "test": "npm run test:ci",
    "posttest": "npm run lint -- --fix",
    "test:nocompile": "node ./out/test/runTest.js",
    "posttest:nocompile": "npm run lint -- --fix",
    "test:watch": "tsc-watch --noClear --onFirstSuccess 'npm run test:nocompile' --onSuccess 'npm run test:nocompile'"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@types/which": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-md": "^1.0.19",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.14",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "yaml": "^1.10.0"
  }
}
